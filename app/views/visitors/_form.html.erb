<%= form_for visitor, :html => { :multipart => true } do |f| %>
  <% if visitor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(visitor.errors.count, "error") %> prohibited this visitor from being saved:</h2>

      <ul>
      <% visitor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group">
      <%= f.label :typeform_id %><br>
      <%= f.select :typeform_id, Typeform.all.map { |tf| [tf.token, tf.id] }, {}, {class: 'form-control', include_blank: true} %>
    </div>
    <div class="form-group">
      <%= f.label 'Picture Upload - Please Keep Uploads below 1MB' %>
      <%= f.file_field :picture %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>