<%= form_for(visitor) do |f| %>
  <% if visitor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(visitor.errors.count, "error") %> prohibited this visitor from being saved:</h2>

      <ul>
      <% visitor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group">
      <%= f.label :typeform_token %>
      <%= f.text_field :typeform_token, placeholder: 'e86492870ad68b5d154722f9f8c04e8b', class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label 'Picture Upload - Please Keep Uploads below 1MB' %>
      <%= f.file_field :picture %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>